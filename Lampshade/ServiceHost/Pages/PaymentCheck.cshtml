@page
@model ServiceHost.Pages.PaymentCheckModel
@using _0_Framework.Application;

@{
    ViewData["Title"] = "تایید سبد خرید و پرداخت";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">تایید سبد خرید / پرداخت</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="./Index">صفحه اصلی</a>
                            </li>
                            <li class="active">تایید سبد خرید / پرداخت</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <form action="#">
                            <div class="cart-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="pro-thumbnail">عکس</th>
                                            <th class="pro-thumbnail">محصول</th>
                                            <th class="pro-title">قیمت واحد</th>
                                            <th class="pro-price">تعداد</th>
                                            <th class="pro-quantity">مبلغ کل بدون تخفیف</th>
                                            <th class="pro-quantity">درصد تخفیف</th>
                                            <th class="pro-subtotal">مبلغ کل تخفیف</th>
                                            <th class="pro-remove">مبلغ پس از تخفیف</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.cart.Items)
                                        {
                                            <tr>
                                                <td class="pro-thumbnail">
                                                    <a asp-page="/Product" asp-route-id="@item.Id">
                                                        <img src="~/SitePictures/@item.Picture" class="img-fluid"
                                                             alt="@item.Name">
                                                    </a>
                                                </td>
                                                <td class="pro-title">
                                                    <a asp-page="/Product" asp-route-id="@item.Id">
                                                        @item.Name
                                                    </a>
                                                </td>
                                                <td class="pro-price">
                                                    <span>تومان @item.UnitPrice.ToMoney()</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@item.Count عدد</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>تومان @item.TotalItemPrice.ToMoney()</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>% @item.DiscountRate</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>تومان @item.DiscountAmount.ToMoney()</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>تومان @item.ItemPayAmount.ToMoney()</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </form>

                        <div class="row">
                            <div class="col-lg-6 col-12 d-flex">
                                <div class="cart-summary">
                                    <div class="cart-summary-wrap">
                                        <h4>خلاصه وضعیت فاکتور</h4>
                                        <p>مبلغ نهایی <span>تومان @Model.cart.TotalAmount.ToMoney()</span></p>
                                        <p>مبلغ تخفیف <span>تومان @Model.cart.DiscountAmount.ToMoney()</span></p>
                                        <h2>مبلغ قابل پرداخت <span>تومان @Model.cart.PayAmount.ToMoney()</span></h2>
                                    </div>
                                    <div class="cart-summary-button">
                                        <a class="checkout-btn">پرداخت</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
